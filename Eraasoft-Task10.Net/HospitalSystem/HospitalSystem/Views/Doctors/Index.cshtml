@model HospitalSystem.ViewModels.DoctorListVM

@{
    ViewData["Title"] = "Our Expert Doctors";
}

<!-- Page Header Section -->
<section class="hero-section" style="padding: 60px 0;">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="hero-title" style="font-size: 2.5rem;">@ViewData["Title"]</h1>
                <p class="hero-subtitle">Meet our team of experienced medical professionals</p>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<div class="container mt-5">
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info border-0" style="background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 100%);">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-info-circle text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="alert-heading mb-1 text-primary">Available Doctors</h5>
                        <p class="mb-0">We have <strong>@Model.TotalDoctors</strong> experienced doctors ready to serve you with world-class medical care.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var doctor in Model.Doctors)
        {
            <div class="col-xl-4 col-lg-6 col-md-6">
                <div class="doctor-card-enhanced">
                    <div class="doctor-card-header">
                        <div class="doctor-image-wrapper">
                            @if (!string.IsNullOrEmpty(doctor.Img))
                            {
                                <img src="~/images/@doctor.Img" alt="@doctor.Name" class="doctor-image" />
                            }
                            else
                            {
                                <div class="doctor-placeholder-enhanced">
                                    <i class="fas fa-user-md"></i>
                                </div>
                            }
                        </div>
                        @if (doctor.IsAvailable)
                        {
                            <span class="availability-badge available">Available</span>
                        }
                        else
                        {
                            <span class="availability-badge busy">Busy</span>
                        }
                    </div>
                    
                    <div class="doctor-card-body">
                        <h5 class="doctor-name-enhanced">Dr. @doctor.Name</h5>
                        <div class="doctor-specialty-enhanced">
                            <i class="fas fa-stethoscope me-2"></i>
                            @doctor.Specialization
                        </div>
                        <p class="doctor-description">
                            Specialized in @doctor.Specialization with years of experience in providing quality healthcare and patient care.
                        </p>
                        <div class="doctor-stats">
                            <div class="stat-item">
                                <i class="fas fa-calendar-check"></i>
                                <span>@doctor.TotalAppointments Appointments</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="doctor-card-footer">
                        <a asp-action="BookAppointment" asp-route-id="@doctor.Id" class="btn-book-appointment">
                            <i class="fas fa-calendar-plus me-2"></i>
                            <span>Book Appointment</span>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Doctors.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="fas fa-user-md"></i>
                    </div>
                    <h4 class="empty-state-title">No Doctors Available</h4>
                    <p class="empty-state-description">Currently, there are no doctors available in our system. Please check back later or contact us for emergency services.</p>
                    <a href="tel:+1-234-567-8900" class="btn btn-primary">
                        <i class="fas fa-phone me-2"></i>Emergency Contact
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add smooth animation on page load
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.doctor-card-enhanced');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';
                
                setTimeout(() => {
                    card.style.transition = 'all 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
}
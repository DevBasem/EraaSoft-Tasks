<!DOCTYPE html>
<html lang="en" class="admin-page">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieApp Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body class="admin-page">
    <div class="admin-area">
        <!-- Admin Header -->
        <header class="admin-header">
            <div class="d-flex justify-content-between align-items-center w-100">
                <div class="d-flex align-items-center">
                    <button id="sidebarToggle" class="d-lg-none btn me-3 sidebar-toggle-btn">
                        <i class="fas fa-bars text-white"></i>
                    </button>
                    <a class="admin-brand" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <i class="fas fa-film"></i>MovieApp Admin
                    </a>
                </div>
                <div class="d-flex align-items-center">
                    <!-- Visible only on desktop (lg and up) -->
                    <div class="d-none d-lg-flex align-items-center">
                        <div class="dropdown me-3">
                            <button class="admin-btn admin-btn-outline admin-btn-sm dropdown-toggle" type="button"
                                id="notificationDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-bell"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                    style="font-size: 0.5rem;">3</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown"
                                style="min-width: 280px;">
                                <li>
                                    <h6 class="dropdown-header">Notifications</h6>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-ticket-alt me-2 text-primary"></i> 3 new
                                        movie tickets sold</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user-plus me-2 text-success"></i> New user
                                        registered</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-comment me-2 text-warning"></i> New
                                        review posted</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-center" href="#">View All Notifications</a></li>
                            </ul>
                        </div>
                        <a asp-area="" asp-controller="Home" asp-action="Index"
                            class="admin-btn admin-btn-outline admin-btn-sm me-3">
                            <i class="fas fa-home"></i> View Site
                        </a>
                    </div>
                    <div class="dropdown">
                        <button class="admin-btn admin-btn-outline admin-btn-sm dropdown-toggle" type="button" id="userDropdown"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle"></i> Admin
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i> Profile</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i> Settings</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i> Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        <div class="admin-container">
            <!-- Admin Sidebar -->
            <aside class="admin-sidebar" id="adminSidebar">
                <!-- Mobile-only actions section (visible only on mobile) -->
                <div class="sidebar-actions d-lg-none">
                    <!-- Notifications dropdown moved to sidebar on mobile -->
                    <div class="sidebar-action-item dropdown mb-3">
                        <button class="admin-btn admin-btn-outline admin-btn-sm dropdown-toggle w-100" type="button"
                            id="notificationDropdownMobile" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-bell me-2"></i> Notifications
                            <span class="badge bg-danger ms-2">3</span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="notificationDropdownMobile"
                            style="min-width: 280px;">
                            <li>
                                <h6 class="dropdown-header">Notifications</h6>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-ticket-alt me-2 text-primary"></i> 3 new
                                    movie tickets sold</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user-plus me-2 text-success"></i> New user
                                    registered</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-comment me-2 text-warning"></i> New
                                    review posted</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-center" href="#">View All Notifications</a></li>
                        </ul>
                    </div>
                    
                    <!-- View Site link moved to sidebar on mobile -->
                    <div class="sidebar-action-item mb-3">
                        <a asp-area="" asp-controller="Home" asp-action="Index"
                            class="admin-btn admin-btn-outline admin-btn-sm w-100">
                            <i class="fas fa-home me-2"></i> View Site
                        </a>
                    </div>
                    
                    <hr class="sidebar-divider">
                </div>
                
                <nav class="admin-nav">
                    <div class="admin-nav-item">
                        <a class="admin-nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Dashboard" ? "active" : "")"
                            asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </div>

                    <div class="admin-nav-heading">Content Management</div>

                    <div class="admin-nav-item">
                        <a class="admin-nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Movies" ? "active" : "")"
                            asp-area="Admin" asp-controller="Movies" asp-action="Index">
                            <i class="fas fa-film"></i> Movies
                        </a>
                    </div>

                    <div class="admin-nav-item">
                        <a class="admin-nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Categories" ? "active" : "")"
                            asp-area="Admin" asp-controller="Categories" asp-action="Index">
                            <i class="fas fa-tags"></i> Categories
                        </a>
                    </div>

                    <div class="admin-nav-item">
                        <a class="admin-nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Actors" ? "active" : "")"
                            asp-area="Admin" asp-controller="Actors" asp-action="Index">
                            <i class="fas fa-users"></i> Actors
                        </a>
                    </div>

                    <div class="admin-nav-item">
                        <a class="admin-nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Cinemas" ? "active" : "")"
                            asp-area="Admin" asp-controller="Cinemas" asp-action="Index">
                            <i class="fas fa-building"></i> Cinemas
                        </a>
                    </div>

                    <div class="admin-nav-heading">Reports</div>

                    <div class="admin-nav-item">
                        <a class="admin-nav-link" href="#">
                            <i class="fas fa-chart-bar"></i> Sales Report
                        </a>
                    </div>

                    <div class="admin-nav-item">
                        <a class="admin-nav-link" href="#">
                            <i class="fas fa-chart-line"></i> Traffic Analysis
                        </a>
                    </div>

                    <div class="admin-nav-heading">Settings</div>

                    <div class="admin-nav-item">
                        <a class="admin-nav-link" href="#">
                            <i class="fas fa-cog"></i> General Settings
                        </a>
                    </div>

                    <div class="admin-nav-item">
                        <a class="admin-nav-link" href="#">
                            <i class="fas fa-user-shield"></i> User Management
                        </a>
                    </div>
                </nav>
            </aside>

            <!-- Admin Content -->
            <main class="admin-content">
                @RenderBody()
            </main>
        </div>

        <!-- Admin Footer -->
        <footer class="admin-footer">
            <div class="container-fluid">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                    <div>&copy; @DateTime.Now.Year MovieApp Admin. All rights reserved.</div>
                    <div class="mt-2 mt-md-0">
                        <span>Made with <i class="fas fa-heart text-danger mx-1"></i> for movie administrators</span>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('adminSidebar');

            if (sidebarToggle && sidebar) {
                sidebarToggle.addEventListener('click', function () {
                    sidebar.classList.toggle('show');
                });
            }

            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function (event) {
                const isMobile = window.innerWidth < 992;
                const isClickInside = sidebar.contains(event.target) || sidebarToggle.contains(event.target);

                if (isMobile && !isClickInside && sidebar.classList.contains('show')) {
                    sidebar.classList.remove('show');
                }
            });

            // Fix for charts resizing
            window.addEventListener('resize', function () {
                if (window.Chart) {
                    for (let chart of Chart.instances) {
                        chart.resize();
                    }
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
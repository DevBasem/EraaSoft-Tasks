@model MovieApp.ViewModels.Admin.CinemaVM

@{
    ViewData["Title"] = "Delete Cinema";
}

<div class="admin-page-header admin-fade-in">
    <h1 class="admin-page-title">Delete Cinema</h1>
    <div class="admin-btn-group">
        <a asp-action="Index" class="admin-btn admin-btn-outline admin-btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </div>
</div>

<div class="alert alert-danger admin-fade-in-delay-1 mb-4">
    <div class="d-flex">
        <div class="me-3">
            <i class="fas fa-exclamation-triangle" style="font-size: 2rem;"></i>
        </div>
        <div>
            <h5 class="alert-heading">Warning: You are about to delete this cinema</h5>
            <p class="mb-0">This action cannot be undone. All associations with movies will be removed.</p>
        </div>
    </div>
</div>

<div class="row admin-fade-in-delay-1">
    <div class="col-md-6">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5 class="m-0 admin-widget-title">Cinema Information</h5>
            </div>
            <div class="admin-card-body">
                <div class="text-center mb-4">
                    @if (!string.IsNullOrEmpty(Model.LogoPath))
                    {
                        <img src="@Model.LogoPath" alt="@Model.Name" class="img-fluid shadow mb-3" 
                             style="max-height: 100px; border-radius: var(--admin-radius);"
                             onerror="this.style.display='none';document.getElementById('deleteFallbackIcon').style.display='flex';" />
                        <div id="deleteFallbackIcon" class="cinema-logo-placeholder mb-3" style="display:none;">
                            <i class="fas fa-film"></i>
                        </div>
                    }
                    else
                    {
                        <div class="cinema-logo-placeholder mb-3">
                            <i class="fas fa-film"></i>
                        </div>
                    }
                </div>
                <div class="admin-form-group">
                    <label class="admin-label">Name</label>
                    <p class="form-control-static admin-input">@Model.Name</p>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Location))
                {
                    <div class="admin-form-group">
                        <label class="admin-label">Location</label>
                        <p class="form-control-static admin-input">@Model.Location</p>
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(Model.City))
                {
                    <div class="admin-form-group">
                        <label class="admin-label">City</label>
                        <p class="form-control-static admin-input">@Model.City</p>
                    </div>
                }
                
                <div class="admin-form-group">
                    <label class="admin-label">Associated Movies</label>
                    <p class="form-control-static admin-input">
                        @if (Model.MovieCount > 0)
                        {
                            <span class="admin-badge admin-badge-warning">
                                <i class="fas fa-exclamation-triangle me-1"></i> This cinema has @Model.MovieCount movies
                            </span>
                        }
                        else
                        {
                            <span class="admin-badge admin-badge-success">
                                <i class="fas fa-check me-1"></i> No associated movies
                            </span>
                        }
                    </p>
                </div>
                
                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="admin-btn admin-btn-danger">
                            <i class="fas fa-trash-alt me-1"></i> Delete Cinema
                        </button>
                        <a asp-action="Index" class="admin-btn admin-btn-outline">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5 class="m-0 admin-widget-title">Deletion Impact</h5>
            </div>
            <div class="admin-card-body">
                <div class="impact-item">
                    <i class="fas fa-film me-2 admin-text-warning"></i>
                    <strong>Movies:</strong> Any movies associated with this cinema will not be deleted, but they will no longer have an assigned cinema.
                </div>
                
                <div class="impact-item mt-3">
                    <i class="fas fa-exclamation-triangle me-2 admin-text-danger"></i>
                    <strong>Warning:</strong> This action cannot be undone. Please be certain before proceeding.
                </div>
                
                @if (Model.MovieCount > 0)
                {
                    <div class="alert alert-warning mt-4">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        This cinema has @Model.MovieCount movies associated with it. Consider reassigning these movies to another cinema before deletion.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .cinema-logo-placeholder {
        width: 100px;
        height: 100px;
        background-color: rgba(255, 255, 255, 0.05);
        border-radius: var(--admin-radius);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        font-size: 2.5rem;
        color: var(--admin-primary);
    }
    
    .impact-item {
        padding: 1rem;
        background-color: rgba(255, 255, 255, 0.03);
        border-radius: var(--admin-radius-sm);
    }
</style>
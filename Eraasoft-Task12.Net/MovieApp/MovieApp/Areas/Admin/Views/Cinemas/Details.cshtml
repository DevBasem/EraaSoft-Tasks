@model MovieApp.ViewModels.Admin.CinemaVM

@{
    ViewData["Title"] = "Cinema Details";
}

<div class="admin-page-header admin-fade-in">
    <h1 class="admin-page-title">Cinema Details</h1>
    <div class="admin-btn-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="admin-btn admin-btn-primary admin-btn-sm">
            <i class="fas fa-edit me-1"></i> Edit
        </a>
        <a asp-action="Index" class="admin-btn admin-btn-outline admin-btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </div>
</div>

<div class="row admin-fade-in-delay-1">
    <div class="col-md-4 mb-4">
        <div class="admin-card h-100">
            <div class="admin-card-header">
                <h5 class="m-0 admin-widget-title">Cinema Information</h5>
            </div>
            <div class="admin-card-body">
                <div class="admin-stat-card">
                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.LogoPath))
                        {
                            <img src="@Model.LogoPath" alt="@Model.Name" class="img-fluid shadow mb-3" 
                                 style="max-height: 120px; border-radius: var(--admin-radius);" 
                                 onerror="this.style.display='none';document.getElementById('fallbackIcon').style.display='flex';" />
                            <div id="fallbackIcon" class="cinema-logo-placeholder mb-3" style="display: none;">
                                <i class="fas fa-film"></i>
                            </div>
                        }
                        else
                        {
                            <div class="cinema-logo-placeholder mb-3">
                                <i class="fas fa-film"></i>
                            </div>
                        }
                    </div>
                    
                    <h2 class="mb-3 text-center">@Model.Name</h2>
                    
                    <ul class="list-unstyled">
                        @if (!string.IsNullOrEmpty(Model.Location))
                        {
                            <li class="mb-2">
                                <span class="admin-text-muted">Location:</span>
                                <span class="ms-2">@Model.Location</span>
                            </li>
                        }
                        @if (!string.IsNullOrEmpty(Model.City))
                        {
                            <li class="mb-2">
                                <span class="admin-text-muted">City:</span>
                                <span class="ms-2">@Model.City</span>
                            </li>
                        }
                    </ul>
                    
                    <div class="mt-3">
                        <span class="admin-badge admin-badge-primary">
                            <i class="fas fa-film me-1"></i> @Model.MovieCount Movies
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-8 mb-4">
        <div class="admin-card h-100">
            <div class="admin-card-header">
                <h5 class="m-0 admin-widget-title">Movies in this Cinema</h5>
            </div>
            <div class="admin-card-body">
                @if (Model.MovieCount > 0)
                {
                    <div class="alert" role="alert" style="background-color: rgba(10,132,255,0.1); color: var(--admin-text); border: 1px solid rgba(10,132,255,0.3); border-radius: var(--admin-radius-sm);">
                        <i class="fas fa-info-circle me-2"></i>
                        This cinema has @Model.MovieCount movies associated with it.
                    </div>
                    
                    <div class="text-end mb-3">
                        <a asp-controller="Movies" asp-action="Create" class="admin-btn admin-btn-outline admin-btn-sm">
                            <i class="fas fa-plus me-1"></i> Add New Movie
                        </a>
                    </div>
                }
                else
                {
                    <div class="text-center p-4">
                        <i class="fas fa-film mb-3" style="font-size: 2.5rem; color: var(--admin-text-muted);"></i>
                        <h5>No movies in this cinema</h5>
                        <p class="text-muted">No movies have been assigned to this cinema yet.</p>
                        <a asp-controller="Movies" asp-action="Create" class="admin-btn admin-btn-outline admin-btn-sm mt-2">
                            <i class="fas fa-plus me-1"></i> Add a Movie
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .cinema-logo-placeholder {
        width: 120px;
        height: 120px;
        background-color: rgba(255, 255, 255, 0.05);
        border-radius: var(--admin-radius);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        font-size: 3rem;
        color: var(--admin-primary);
    }
</style>
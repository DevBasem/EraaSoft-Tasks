@model MovieApp.ViewModels.Admin.CategoryVM

@{
    ViewData["Title"] = "Delete Category";
}

<div class="admin-page-header admin-fade-in">
    <h1 class="admin-page-title">Delete Category</h1>
    <div class="admin-btn-group">
        <a asp-action="Index" class="admin-btn admin-btn-outline admin-btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </div>
</div>

<div class="row admin-fade-in-delay-1">
    <div class="col-md-6 mx-auto">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5 class="m-0 admin-widget-title text-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i> Confirm Deletion
                </h5>
            </div>
            <div class="admin-card-body">
                <div class="text-center mb-4">
                    <div class="mb-4">
                        <i class="fas fa-trash-alt" style="font-size: 3rem; color: var(--admin-danger);"></i>
                    </div>
                    <h4 class="mb-3">Are you sure you want to delete this category?</h4>
                    <p class="text-muted mb-4">This action cannot be undone. All movies associated with this category will need to be reassigned.</p>
                </div>
                
                <div class="p-3 mb-4" style="background-color: rgba(255,255,255,0.05); border-radius: var(--admin-radius);">
                    <div class="row mb-2">
                        <div class="col-4 text-muted">Name:</div>
                        <div class="col-8"><strong>@Model.Name</strong></div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mb-2">
                            <div class="col-4 text-muted">Description:</div>
                            <div class="col-8">@Model.Description</div>
                        </div>
                    }
                    <div class="row">
                        <div class="col-4 text-muted">Movies:</div>
                        <div class="col-8">
                            <span class="admin-badge admin-badge-primary">@Model.MovieCount Movies</span>
                        </div>
                    </div>
                </div>
                
                <div class="alert" role="alert" style="background-color: rgba(255,69,58,0.1); color: var(--admin-text); border: 1px solid rgba(255,69,58,0.3); border-radius: var(--admin-radius-sm);">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <strong>Warning:</strong> This category has @Model.MovieCount associated movies. Make sure to reassign them before deletion.
                </div>
                
                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2 justify-content-center">
                        <button type="submit" class="admin-btn admin-btn-danger">
                            <i class="fas fa-trash-alt me-2"></i> Delete
                        </button>
                        <a asp-action="Index" class="admin-btn admin-btn-outline">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
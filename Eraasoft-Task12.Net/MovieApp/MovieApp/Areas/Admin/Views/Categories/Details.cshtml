@model MovieApp.ViewModels.Admin.CategoryVM

@{
    ViewData["Title"] = "Category Details";
}

<div class="admin-page-header admin-fade-in">
    <h1 class="admin-page-title">Category Details</h1>
    <div class="admin-btn-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="admin-btn admin-btn-primary admin-btn-sm">
            <i class="fas fa-edit me-1"></i> Edit
        </a>
        <a asp-action="Index" class="admin-btn admin-btn-outline admin-btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </div>
</div>

<div class="row admin-fade-in-delay-1">
    <div class="col-md-4 mb-4">
        <div class="admin-card h-100">
            <div class="admin-card-header">
                <h5 class="m-0 admin-widget-title">Category Information</h5>
            </div>
            <div class="admin-card-body">
                <div class="admin-stat-card">
                    <div class="admin-stat-icon admin-bg-primary">
                        <i class="fas fa-tag admin-text-primary"></i>
                    </div>
                    <h2 class="mb-3">@Model.Name</h2>
                    
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="mb-4">@Model.Description</p>
                    }
                    
                    <div class="mt-3">
                        <span class="admin-badge admin-badge-primary">
                            <i class="fas fa-film me-1"></i> @Model.MovieCount Movies
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-8 mb-4">
        <div class="admin-card h-100">
            <div class="admin-card-header">
                <h5 class="m-0 admin-widget-title">Movies in this Category</h5>
            </div>
            <div class="admin-card-body">
                @if (Model.Movies != null && Model.Movies.Any())
                {
                    <div class="admin-table-responsive">
                        <table class="admin-table">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Release Year</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var movie in Model.Movies)
                                {
                                    <tr>
                                        <td>@movie.Title</td>
                                        <td>@(movie.ReleaseYear?.ToString() ?? "N/A")</td>
                                        <td>
                                            @if (movie.Status == MovieApp.Models.MovieStatus.NowShowing)
                                            {
                                                <span class="admin-badge admin-badge-primary">Now Showing</span>
                                            }
                                            else
                                            {
                                                <span class="admin-badge admin-badge-success">Coming Soon</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center p-4">
                        <i class="fas fa-film mb-3" style="font-size: 2.5rem; color: var(--admin-text-muted);"></i>
                        <h5>No movies in this category</h5>
                        <p class="text-muted">No movies have been assigned to this category yet.</p>
                        <a asp-controller="Movies" asp-action="Create" class="admin-btn admin-btn-outline admin-btn-sm mt-2">
                            <i class="fas fa-plus me-1"></i> Add a Movie
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
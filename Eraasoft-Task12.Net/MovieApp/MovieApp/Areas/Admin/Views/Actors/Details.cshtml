@model MovieApp.ViewModels.Admin.ActorVM

@{
    ViewData["Title"] = "Actor Details";
}

<div class="admin-page-header admin-fade-in">
    <h1 class="admin-page-title">Actor Details</h1>
    <div class="admin-btn-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="admin-btn admin-btn-primary admin-btn-sm">
            <i class="fas fa-edit me-1"></i> Edit
        </a>
        <a asp-action="Index" class="admin-btn admin-btn-outline admin-btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </div>
</div>

<div class="row admin-fade-in-delay-1">
    <div class="col-md-4 mb-4">
        <div class="admin-card h-100">
            <div class="admin-card-header">
                <h5 class="m-0 admin-widget-title">Actor Information</h5>
            </div>
            <div class="admin-card-body text-center">
                @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                {
                    <img src="@Model.ProfileImagePath" alt="@Model.FullName" class="img-fluid rounded mb-3" style="max-height: 250px; object-fit: cover;" />
                }
                else
                {
                    <div class="bg-dark d-flex align-items-center justify-content-center mb-3" style="height: 250px; border-radius: var(--admin-radius);">
                        <i class="fas fa-user fa-4x admin-text-muted"></i>
                    </div>
                }
                <h2 class="mb-3">@Model.FullName</h2>
                
                <div class="mt-3">
                    <span class="admin-badge admin-badge-primary">
                        <i class="fas fa-film me-1"></i> @Model.MovieCount Movies
                    </span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-8 mb-4">
        <div class="admin-card h-100">
            <div class="admin-card-header">
                <h5 class="m-0 admin-widget-title">Biography</h5>
            </div>
            <div class="admin-card-body">
                @if (!string.IsNullOrEmpty(Model.Bio))
                {
                    <p class="mb-4">@Model.Bio</p>
                }
                else
                {
                    <p class="text-muted mb-4">No biography available for this actor.</p>
                }
            </div>
        </div>
    </div>
</div>

@* Add more information about movies the actor has been in if needed *@
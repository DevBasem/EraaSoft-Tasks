@model UserResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-content-container">
    <div class="admin-content-header">
        <h1>@ViewData["Title"]</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb admin-breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Users" asp-action="Index">Users</a></li>
                <li class="breadcrumb-item active">Reset Password</li>
            </ol>
        </nav>
    </div>
    
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="admin-card">
                <div class="admin-card-header">
                    <h5>Reset User Password</h5>
                </div>
                <div class="admin-card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Important:</strong> This will reset the password for user <strong>@Model.Email</strong>. The user will need to use this new password for their next login.
                    </div>
                    
                    <form asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Email" />
                        
                        <div class="admin-form-group">
                            <label asp-for="NewPassword" class="admin-form-label"></label>
                            <input asp-for="NewPassword" class="admin-form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="admin-form-group">
                            <label asp-for="ConfirmPassword" class="admin-form-label"></label>
                            <input asp-for="ConfirmPassword" class="admin-form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="admin-form-buttons">
                            <button type="submit" class="admin-btn admin-btn-primary"
                                    onclick="return confirm('Are you sure you want to reset this user\'s password?')">
                                Reset Password
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="admin-btn admin-btn-outline">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
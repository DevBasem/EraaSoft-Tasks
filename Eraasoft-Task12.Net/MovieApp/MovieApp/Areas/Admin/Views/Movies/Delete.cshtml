@model MovieApp.Models.Movie
@{
    ViewData["Title"] = "Delete Movie";
}

<div class="admin-page-header admin-fade-in">
    <h1 class="admin-page-title">Delete Movie</h1>
    <a asp-action="Index" class="admin-btn admin-btn-outline admin-btn-sm">
        <i class="fas fa-arrow-left me-1"></i> Back to List
    </a>
</div>

<div class="row mb-4 admin-fade-in-delay-1">
    <div class="col-lg-8 mx-auto">
        <div class="admin-card">
            <div class="admin-card-header bg-danger bg-opacity-10">
                <h5 class="m-0 admin-widget-title admin-text-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i> Confirm Deletion
                </h5>
            </div>
            <div class="admin-card-body">
                <div class="alert" role="alert" style="background-color: rgba(255,69,58,0.1); color: var(--admin-text); border: 1px solid rgba(255,69,58,0.3); border-radius: var(--admin-radius-sm);">
                    <div class="d-flex">
                        <div class="me-3">
                            <i class="fas fa-exclamation-circle admin-text-danger" style="font-size: 1.5rem;"></i>
                        </div>
                        <div>
                            <h6 class="alert-heading mb-1">Warning!</h6>
                            <p class="mb-0">Are you sure you want to delete this movie? This action cannot be undone and may affect related data.</p>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-4 text-center">
                        @if (!string.IsNullOrEmpty(Model.PosterUrl))
                        {
                            <img src="@Model.PosterUrl" alt="@Model.Title" class="img-fluid rounded mb-3" style="max-height: 250px;" />
                        }
                        else
                        {
                            <div class="bg-dark d-flex align-items-center justify-content-center mb-3" style="height: 200px; border-radius: var(--admin-radius);">
                                <i class="fas fa-film fa-3x admin-text-muted"></i>
                            </div>
                        }
                    </div>
                    <div class="col-md-8">
                        <h3 class="mb-3">@Model.Title</h3>
                        <dl class="row">
                            <dt class="col-sm-4">Category</dt>
                            <dd class="col-sm-8">@(Model.Category?.Name ?? "None")</dd>
                            
                            <dt class="col-sm-4">Release Year</dt>
                            <dd class="col-sm-8">@Model.ReleaseYear</dd>
                            
                            <dt class="col-sm-4">Duration</dt>
                            <dd class="col-sm-8">@Model.DurationMinutes minutes</dd>
                            
                            <dt class="col-sm-4">Status</dt>
                            <dd class="col-sm-8">
                                @if (Model.Status == MovieApp.Models.MovieStatus.NowShowing)
                                {
                                    <span class="admin-badge admin-badge-primary">Now Showing</span>
                                }
                                else
                                {
                                    <span class="admin-badge admin-badge-success">Coming Soon</span>
                                }
                            </dd>
                            
                            <dt class="col-sm-4">Cinema</dt>
                            <dd class="col-sm-8">@(Model.Cinema?.Name ?? "None")</dd>
                        </dl>
                        
                        <form asp-action="Delete" method="post" class="mt-4">
                            <input type="hidden" asp-for="Id" />
                            <div class="admin-btn-group">
                                <button type="submit" class="admin-btn admin-btn-danger">
                                    <i class="fas fa-trash-alt me-1"></i> Delete Movie
                                </button>
                                <a asp-action="Index" class="admin-btn admin-btn-outline">
                                    Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
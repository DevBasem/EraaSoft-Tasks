@model string
@{
    ViewData["Title"] = "Verify Email First";
}

<div class="identity-container">
    <div class="identity-header">
        <h1>@ViewData["Title"]</h1>
    </div>
    
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 bg-transparent">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-envelope fa-4x text-warning mb-3"></i>
                        <h3>Email Verification Required</h3>
                        <p class="text-secondary">
                            Before you can reset your password, you need to verify your email address.
                            We've sent a new verification email to <strong>@Model</strong>.
                        </p>
                    </div>
                    
                    <div class="identity-info">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Please check your inbox and click on the verification link in the email.
                            After verifying your email, you can return here to reset your password.
                        </div>
                        
                        <p>
                            If you don't receive the email within a few minutes, please check your spam folder.
                        </p>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a asp-area="Identity" asp-controller="Account" asp-action="ForgotPassword" class="btn btn-primary-custom me-2">
                            <i class="fas fa-redo me-2"></i>Try Again
                        </a>
                        <a asp-area="Public" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary-custom">
                            <i class="fas fa-home me-2"></i>Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
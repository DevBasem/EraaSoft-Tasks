@{
    ViewData["Title"] = "Error";
}

<div class="identity-container">
    <div class="identity-header">
        <h1>@ViewData["Title"]</h1>
    </div>
    
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 bg-transparent">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-exclamation-circle fa-4x text-danger mb-3"></i>
                        <h3>Something Went Wrong</h3>
                        <p class="text-secondary">
                            An error occurred while processing your request. We apologize for the inconvenience.
                        </p>
                    </div>
                    
                    <div class="identity-info">
                        <p>
                            Please try again later or contact support if the issue persists. If you are the application administrator, 
                            you can check the logs for more information.
                        </p>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a asp-area="Public" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary-custom">
                            <i class="fas fa-home me-2"></i>Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
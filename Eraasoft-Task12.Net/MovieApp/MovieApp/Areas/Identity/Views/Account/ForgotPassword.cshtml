@model MovieApp.ViewModels.Identity.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="identity-container">
    <div class="identity-header">
        <h1>@ViewData["Title"]</h1>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <form asp-area="Identity" asp-controller="Account" asp-action="ForgotPassword" method="post" class="identity-form">
                <h4>Reset your password</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" autocomplete="email" placeholder="Enter your registered email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="submit" class="identity-btn">Send Verification Code</button>
                
                <div class="identity-links mt-3">
                    <p>
                        <a asp-area="Identity" asp-controller="Account" asp-action="Login">Back to Login</a>
                    </p>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <section class="external-auth">
                <h4>Password Recovery</h4>
                <hr />
                <div class="identity-info">
                    <p>
                        Enter the email address associated with your account, and we'll send you a 4-digit verification code to reset your password.
                    </p>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Important:</strong> Your email address must be verified before you can reset your password. If your email is not verified, we'll send you a verification link first.
                    </div>
                </div>
                
                <div class="auth-separator">
                    <span>How It Works</span>
                </div>
                
                <div class="mt-4">
                    <div class="d-flex mb-2">
                        <i class="fas fa-envelope text-primary me-3 mt-1"></i>
                        <div>
                            <h5 class="mb-1">Check Your Email</h5>
                            <p class="text-muted">We'll send a 4-digit code to your verified email address</p>
                        </div>
                    </div>
                    
                    <div class="d-flex mb-2">
                        <i class="fas fa-key text-primary me-3 mt-1"></i>
                        <div>
                            <h5 class="mb-1">Enter Verification Code</h5>
                            <p class="text-muted">Input the code and create your new password</p>
                        </div>
                    </div>
                    
                    <div class="d-flex">
                        <i class="fas fa-shield-alt text-primary me-3 mt-1"></i>
                        <div>
                            <h5 class="mb-1">Create Strong Password</h5>
                            <p class="text-muted">Choose a secure password you haven't used elsewhere</p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
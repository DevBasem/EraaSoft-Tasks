@model MovieApp.ViewModels.Identity.LoginViewModel
@{
    ViewData["Title"] = "Log in";
}

<div class="identity-container">
    <div class="identity-header">
        <h1>@ViewData["Title"]</h1>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <section>
                @if (TempData["RequiresEmailConfirmation"] != null && (bool)TempData["RequiresEmailConfirmation"] == true)
                {
                    <div class="email-verification-alert mb-3">
                        <div class="d-flex">
                            <div class="verification-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="verification-content">
                                <p class="mb-1">Your email hasn't been verified yet.</p>
                                <form asp-area="Identity" asp-controller="Account" asp-action="Login" method="post" class="d-inline">
                                    <input type="hidden" name="resendConfirmation" value="true" />
                                    <input type="hidden" name="email" value="@TempData["UserEmail"]" />
                                    <button type="submit" class="btn-link p-0">Resend confirmation email</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
                
                <form asp-area="Identity" asp-controller="Account" asp-action="Login" method="post" class="identity-form">
                    <h4>Use your account to log in</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" autocomplete="username" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" autocomplete="current-password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-check mb-3">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="identity-btn">Log in</button>
                    
                    <div class="identity-links mt-3">
                        <p>
                            <a asp-area="Identity" asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-area="Identity" asp-controller="Account" asp-action="Register">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-6">
            <section class="external-auth">
                <h4>Use another service to log in</h4>
                <hr />
                <div class="identity-info">
                    <p>
                        External authentication services are not configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                        for details on setting up this ASP.NET application to support logging in via external services.
                    </p>
                </div>
                
                <div class="auth-separator">
                    <span>Why log in?</span>
                </div>
                
                <div class="mt-4">
                    <div class="d-flex mb-2">
                        <i class="fas fa-ticket-alt text-primary me-3 mt-1"></i>
                        <div>
                            <h5 class="mb-1">Book Movie Tickets</h5>
                            <p class="text-muted">Log in to book tickets for your favorite movies</p>
                        </div>
                    </div>
                    
                    <div class="d-flex mb-2">
                        <i class="fas fa-history text-primary me-3 mt-1"></i>
                        <div>
                            <h5 class="mb-1">Access History</h5>
                            <p class="text-muted">View your booking history and past purchases</p>
                        </div>
                    </div>
                    
                    <div class="d-flex">
                        <i class="fas fa-percentage text-primary me-3 mt-1"></i>
                        <div>
                            <h5 class="mb-1">Special Discounts</h5>
                            <p class="text-muted">Get access to member-only deals and offers</p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

<style>
    .email-verification-alert {
        border-left: 3px solid var(--warning-color);
        padding: 12px 16px;
        background-color: rgba(255, 214, 10, 0.08);
        border-radius: 4px;
    }
    
    .verification-icon {
        background-color: rgba(255, 214, 10, 0.2);
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 12px;
        flex-shrink: 0;
    }
    
    .verification-icon i {
        color: var(--warning-color);
        font-size: 14px;
    }
    
    .verification-content {
        font-size: 14px;
    }
    
    .verification-content p {
        color: var(--text-light);
        margin-bottom: 5px;
    }
    
    .btn-link {
        background: none;
        border: none;
        color: var(--primary-color);
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        padding: 0;
        cursor: pointer;
    }
    
    .btn-link:hover {
        text-decoration: underline;
        color: var(--primary-dark);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
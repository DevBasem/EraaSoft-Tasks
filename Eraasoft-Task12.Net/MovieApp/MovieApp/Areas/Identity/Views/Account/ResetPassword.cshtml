@model MovieApp.ViewModels.Identity.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="identity-container">
    <div class="identity-header">
        <h1>@ViewData["Title"]</h1>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <form asp-area="Identity" asp-controller="Account" asp-action="ResetPassword" method="post" class="identity-form">
                <h4>Create a new password</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Code" type="hidden" />
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" autocomplete="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="identity-btn">Reset Password</button>
            </form>
        </div>
        <div class="col-md-6">
            <section class="external-auth">
                <h4>Password Security</h4>
                <hr />
                <div class="identity-info">
                    <p>
                        Please choose a strong password that you haven't used before. A strong password is at least 8 characters long and includes a mix of uppercase, lowercase, numbers, and special characters.
                    </p>
                </div>
                
                <div class="auth-separator">
                    <span>Tips</span>
                </div>
                
                <div class="mt-4">
                    <div class="d-flex mb-2">
                        <i class="fas fa-lock text-primary me-3 mt-1"></i>
                        <div>
                            <h5 class="mb-1">Strong Password</h5>
                            <p class="text-muted">Include uppercase, lowercase, numbers, and symbols</p>
                        </div>
                    </div>
                    
                    <div class="d-flex mb-2">
                        <i class="fas fa-random text-primary me-3 mt-1"></i>
                        <div>
                            <h5 class="mb-1">Unique Password</h5>
                            <p class="text-muted">Use a password you don't use on other sites</p>
                        </div>
                    </div>
                    
                    <div class="d-flex">
                        <i class="fas fa-shield-alt text-primary me-3 mt-1"></i>
                        <div>
                            <h5 class="mb-1">Remember Securely</h5>
                            <p class="text-muted">Consider using a password manager to store your passwords</p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
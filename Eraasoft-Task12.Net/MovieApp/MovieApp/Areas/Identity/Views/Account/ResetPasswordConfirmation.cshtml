@{
    ViewData["Title"] = "Password Reset Complete";
}

<div class="identity-container">
    <div class="identity-header">
        <h1>@ViewData["Title"]</h1>
    </div>
    
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 bg-transparent">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                        <h3>Password Successfully Reset</h3>
                        <p class="text-secondary">
                            Your password has been reset successfully. You can now use your new password to log in to your account.
                        </p>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="btn btn-primary-custom">
                            <i class="fas fa-sign-in-alt me-2"></i>Log in Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
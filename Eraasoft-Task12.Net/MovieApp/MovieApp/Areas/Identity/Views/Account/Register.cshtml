@model MovieApp.ViewModels.Identity.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="identity-container">
    <div class="identity-header">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form asp-area="Identity" asp-controller="Account" asp-action="Register" method="post" class="identity-form">
                <h4>Create a new account</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" autocomplete="given-name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" autocomplete="family-name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" autocomplete="username" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="identity-btn">Register</button>
                
                <div class="identity-links mt-3">
                    <p>
                        Already have an account? <a asp-area="Identity" asp-controller="Account" asp-action="Login">Log in</a>
                    </p>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <section class="external-auth">
                <h4>Use another service to register</h4>
                <hr />
                <div class="identity-info">
                    <p>
                        External authentication services are not configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                        for details on setting up this ASP.NET application to support logging in via external services.
                    </p>
                </div>
                
                <div class="auth-separator">
                    <span>Why register?</span>
                </div>
                
                <div class="mt-4">
                    <div class="d-flex mb-2">
                        <i class="fas fa-ticket-alt text-primary me-3 mt-1"></i>
                        <div>
                            <h5 class="mb-1">Book Movie Tickets</h5>
                            <p class="text-muted">Register to book tickets for your favorite movies</p>
                        </div>
                    </div>
                    
                    <div class="d-flex mb-2">
                        <i class="fas fa-bell text-primary me-3 mt-1"></i>
                        <div>
                            <h5 class="mb-1">Get Notifications</h5>
                            <p class="text-muted">Receive updates about new releases and special offers</p>
                        </div>
                    </div>
                    
                    <div class="d-flex">
                        <i class="fas fa-star text-primary me-3 mt-1"></i>
                        <div>
                            <h5 class="mb-1">Save Favorites</h5>
                            <p class="text-muted">Build your watchlist and track your favorite movies</p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
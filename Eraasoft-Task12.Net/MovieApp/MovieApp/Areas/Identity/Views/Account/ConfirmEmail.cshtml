@{
    ViewData["Title"] = "Email Confirmed";
}

<div class="identity-container">
    <div class="identity-header">
        <h1>@ViewData["Title"]</h1>
    </div>
    
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 bg-transparent">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                        <h3>Your Email is Confirmed!</h3>
                        <p class="text-secondary">
                            Thank you for verifying your email address. Your account is now active.
                        </p>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="btn btn-primary-custom me-2">
                            <i class="fas fa-sign-in-alt me-2"></i>Log in
                        </a>
                        <a asp-area="Public" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary-custom">
                            <i class="fas fa-home me-2"></i>Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
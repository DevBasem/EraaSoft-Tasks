@{
    ViewData["Title"] = "Access Denied";
}

<div class="identity-container">
    <div class="identity-header">
        <h1>@ViewData["Title"]</h1>
    </div>
    
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 bg-transparent">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-exclamation-triangle fa-4x text-warning mb-3"></i>
                        <h3>You Don't Have Permission</h3>
                        <p class="text-secondary">
                            You don't have the necessary permissions to access this resource.
                        </p>
                    </div>
                    
                    <div class="identity-info">
                        <p>
                            If you believe you should have access to this page, please contact the administrator or try logging in with a different account.
                        </p>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a asp-area="Public" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary-custom me-2">
                            <i class="fas fa-home me-2"></i>Return to Home
                        </a>
                        <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="btn btn-primary-custom">
                            <i class="fas fa-sign-in-alt me-2"></i>Log in
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
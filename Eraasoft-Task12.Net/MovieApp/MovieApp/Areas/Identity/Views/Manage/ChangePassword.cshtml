@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="identity-container">
    <div class="identity-header">
        <h1>@ViewData["Title"]</h1>
    </div>
    
    @if (TempData["StatusMessage"] != null)
    {
        <div class="alert alert-success mb-4" style="background-color: rgba(48,209,88,0.12); color: var(--success-color); border: 1px solid rgba(48,209,88,0.3); border-radius: var(--border-radius);">
            <i class="fas fa-check-circle me-2"></i>@TempData["StatusMessage"]
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="list-group mb-4 identity-nav">
                <a class="list-group-item list-group-item-action" asp-area="Identity" asp-controller="Manage" asp-action="Index">
                    <i class="fas fa-user me-2"></i>Profile
                </a>
                <a class="list-group-item list-group-item-action active" asp-area="Identity" asp-controller="Manage" asp-action="ChangePassword">
                    <i class="fas fa-key me-2"></i>Password
                </a>
            </div>
            
            <div class="password-tips card border-0 bg-transparent mt-4">
                <div class="card-body">
                    <h5><i class="fas fa-shield-alt text-primary me-2"></i>Password Tips</h5>
                    <hr />
                    <ul class="ps-3 text-secondary">
                        <li>Use at least 8 characters</li>
                        <li>Include uppercase letters</li>
                        <li>Include lowercase letters</li>
                        <li>Include numbers</li>
                        <li>Include special characters</li>
                        <li>Don't reuse passwords</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <form asp-area="Identity" asp-controller="Manage" asp-action="ChangePassword" method="post" class="identity-form">
                <h4>Change your password</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="CurrentPassword" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0">
                            <i class="fas fa-lock"></i>
                        </span>
                        <input asp-for="CurrentPassword" class="form-control border-start-0" autocomplete="current-password" />
                    </div>
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="NewPassword" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0">
                            <i class="fas fa-key"></i>
                        </span>
                        <input asp-for="NewPassword" class="form-control border-start-0" autocomplete="new-password" />
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0">
                            <i class="fas fa-check-double"></i>
                        </span>
                        <input asp-for="ConfirmPassword" class="form-control border-start-0" autocomplete="new-password" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                
                <button type="submit" class="identity-btn">Update password</button>
            </form>
        </div>
    </div>
</div>

<style>
    .identity-nav .list-group-item {
        background-color: rgba(255,255,255,0.05);
        color: var(--text-secondary);
        border: 1px solid var(--border-color);
        margin-bottom: 5px;
        border-radius: var(--border-radius);
        transition: all 0.3s ease;
    }
    
    .identity-nav .list-group-item:hover {
        background-color: rgba(255,255,255,0.08);
        color: var(--text-light);
    }
    
    .identity-nav .list-group-item.active {
        background: var(--primary-color);
        color: white;
        border-color: var(--primary-color);
    }
    
    .input-group-text {
        background-color: rgba(255,255,255,0.05);
        color: var(--text-secondary);
        border: 1px solid var(--border-color);
    }
    
    .password-tips hr {
        border-color: var(--border-color);
        opacity: 0.5;
    }
    
    .password-tips ul li {
        margin-bottom: 8px;
        color: var(--text-secondary);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="identity-container">
    <div class="identity-header">
        <h1>@ViewData["Title"]</h1>
    </div>
    
    @if (TempData["StatusMessage"] != null)
    {
        <div class="alert alert-success mb-4" style="background-color: rgba(48,209,88,0.12); color: var(--success-color); border: 1px solid rgba(48,209,88,0.3); border-radius: var(--border-radius);">
            <i class="fas fa-check-circle me-2"></i>@TempData["StatusMessage"]
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="list-group mb-4 identity-nav">
                <a class="list-group-item list-group-item-action active" asp-controller="Manage" asp-action="Index">
                    <i class="fas fa-user me-2"></i>Profile
                </a>
                <a class="list-group-item list-group-item-action" asp-controller="Manage" asp-action="ChangePassword">
                    <i class="fas fa-key me-2"></i>Password
                </a>
            </div>
        </div>
        <div class="col-md-8">
            <form asp-controller="Manage" asp-action="Index" method="post" class="identity-form">
                <h4>Your profile information</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" disabled />
                        @if (Model.IsEmailConfirmed)
                        {
                            <div class="input-group-text bg-transparent border-success text-success">
                                <i class="fas fa-check-circle"></i>
                            </div>
                        }
                        else
                        {
                            <div class="input-group-text bg-transparent border-danger text-danger">
                                <i class="fas fa-times-circle"></i>
                            </div>
                        }
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    @if (!Model.IsEmailConfirmed)
                    {
                        <div class="mt-2">
                            <button type="submit" class="btn btn-link p-0 text-primary" name="resendEmailConfirmation" value="true">Send verification email</button>
                        </div>
                    }
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                
                <button type="submit" class="identity-btn">Save</button>
            </form>
        </div>
    </div>
</div>

<style>
    .identity-nav .list-group-item {
        background-color: rgba(255,255,255,0.05);
        color: var(--text-secondary);
        border: 1px solid var(--border-color);
        margin-bottom: 5px;
        border-radius: var(--border-radius);
        transition: all 0.3s ease;
    }
    
    .identity-nav .list-group-item:hover {
        background-color: rgba(255,255,255,0.08);
        color: var(--text-light);
    }
    
    .identity-nav .list-group-item.active {
        background: var(--primary-color);
        color: white;
        border-color: var(--primary-color);
    }
    
    .input-group-text {
        background-color: rgba(255,255,255,0.05);
        color: var(--text-light);
        border: 1px solid var(--border-color);
    }
    
    .border-success {
        border-color: var(--success-color) !important;
    }
    
    .border-danger {
        border-color: var(--danger-color) !important;
    }
    
    .text-success {
        color: var(--success-color) !important;
    }
    
    .text-danger {
        color: var(--danger-color) !important;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
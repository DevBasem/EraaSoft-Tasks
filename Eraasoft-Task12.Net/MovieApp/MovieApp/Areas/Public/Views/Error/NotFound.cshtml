@{
    ViewData["Title"] = "Page Not Found";
    int statusCode = ViewBag.StatusCode ?? 404;
    string errorMessage = ViewBag.ErrorMessage ?? "The page you are looking for could not be found";
}

<div class="public-error-container">
    <div class="public-error-content">
        <!-- Movie Reel Animation -->
        <div class="movie-reel">
            <div class="reel-circle">
                <div class="reel-center"></div>
                <div class="reel-holes">
                    <div class="hole"></div>
                    <div class="hole"></div>
                    <div class="hole"></div>
                    <div class="hole"></div>
                    <div class="hole"></div>
                    <div class="hole"></div>
                </div>
            </div>
            <div class="error-code-overlay">@statusCode</div>
        </div>
        
        <div class="public-error-message">
            <h1>This Scene Was Cut!</h1>
            <p class="error-description">@errorMessage</p>
            <p class="error-subtitle">
                Don't worry! There are plenty of amazing movies and shows waiting for you on our main page.
            </p>
        </div>
        
        <!-- Public Action Buttons -->
        <div class="public-error-actions">
            <a href="@Url.Action("Index", "Home", new { area = "Public" })" class="btn btn-public-primary">
                <i class="fas fa-home me-2"></i>Back to Home
            </a>
            <a href="@Url.Action("Index", "Movies", new { area = "Public" })" class="btn btn-public-outline">
                <i class="fas fa-film me-2"></i>Browse Movies
            </a>
        </div>
        
        <!-- Popular Sections -->
        <div class="popular-sections">
            <h3><i class="fas fa-fire me-2"></i>What's Popular</h3>
            <div class="section-links">
                <a href="@Url.Action("Index", "Movies", new { area = "Public" })" class="section-card">
                    <i class="fas fa-video"></i>
                    <span>Latest Movies</span>
                </a>
                <a href="@Url.Action("Index", "Categories", new { area = "Public" })" class="section-card">
                    <i class="fas fa-th-large"></i>
                    <span>Categories</span>
                </a>
                <a href="@Url.Action("Index", "Actors", new { area = "Public" })" class="section-card">
                    <i class="fas fa-star"></i>
                    <span>Top Actors</span>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Floating Movie Icons -->
    <div class="floating-icons">
        <i class="fas fa-ticket-alt floating-icon"></i>
        <i class="fas fa-camera floating-icon"></i>
        <i class="fas fa-masks-theater floating-icon"></i>
    </div>
</div>

<style>
    .public-error-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        position: relative;
        overflow: hidden;
        padding: 80px 20px 20px 20px; /* Added top padding for navbar */
    }
    
    .public-error-content {
        text-align: center;
        max-width: 600px;
        position: relative;
        z-index: 2;
    }
    
    /* Movie Reel Animation */
    .movie-reel {
        position: relative;
        margin: 0 auto 30px;
        width: 150px;
        height: 150px;
    }
    
    .reel-circle {
        width: 150px;
        height: 150px;
        border: 8px solid #f8f9fa;
        border-radius: 50%;
        position: relative;
        animation: spin 4s linear infinite;
        background: radial-gradient(circle, #343a40 30%, #6c757d  70%);
    }
    
    .reel-center {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 40px;
        height: 40px;
        background: #212529;
        border-radius: 50%;
        border: 3px solid #f8f9fa;
    }
    
    .reel-holes {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
    
    .hole {
        position: absolute;
        width: 12px;
        height: 12px;
        background: #212529;
        border-radius: 50%;
    }
    
    .hole:nth-child(1) { top: 15px; left: 50%; transform: translateX(-50%); }
    .hole:nth-child(2) { top: 50%; right: 15px; transform: translateY(-50%); }
    .hole:nth-child(3) { bottom: 15px; left: 50%; transform: translateX(-50%); }
    .hole:nth-child(4) { top: 50%; left: 15px; transform: translateY(-50%); }
    .hole:nth-child(5) { top: 25px; right: 35px; }
    .hole:nth-child(6) { bottom: 25px; left: 35px; }
    
    .error-code-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 2rem;
        font-weight: bold;
        color: var(--primary-color);
        z-index: 3;
    }
    
    @@keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
    
    /* Public Error Message */
    .public-error-message h1 {
        font-size: 2.5rem;
        margin-bottom: 15px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }
    
    .error-description {
        font-size: 1.2rem;
        margin-bottom: 10px;
        opacity: 0.9;
    }
    
    .error-subtitle {
        opacity: 0.8;
        margin-bottom: 30px;
        line-height: 1.6;
    }
    
    /* Public Action Buttons */
    .public-error-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 40px;
    }
    
    .btn-public-primary {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: 2px solid rgba(255, 255, 255, 0.3);
        padding: 12px 25px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        backdrop-filter: blur(10px);
    }
    
    .btn-public-primary:hover {
        background: rgba(255, 255, 255, 0.3);
        border-color: rgba(255, 255, 255, 0.5);
        transform: translateY(-2px);
        color: white;
        text-decoration: none;
    }
    
    .btn-public-outline {
        background: transparent;
        color: white;
        border: 2px solid rgba(255, 255, 255, 0.5);
        padding: 10px 25px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
    }
    
    .btn-public-outline:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: white;
        transform: translateY(-2px);
        color: white;
        text-decoration: none;
    }
    
    /* Popular Sections */
    .popular-sections {
        background: rgba(255, 255, 255, 0.1);
        padding: 25px;
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
    }
    
    .popular-sections h3 {
        margin-bottom: 20px;
        font-size: 1.3rem;
    }
    
    .section-links {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }
    
    .section-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
        border-radius: 15px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        text-decoration: none;
        color: white;
        transition: all 0.3s ease;
        min-width: 120px;
        backdrop-filter: blur(5px);
    }
    
    .section-card:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: translateY(-3px);
        color: white;
        text-decoration: none;
    }
    
    .section-card i {
        font-size: 2rem;
        margin-bottom: 10px;
        opacity: 0.8;
    }
    
    .section-card span {
        font-weight: 500;
        font-size: 0.9rem;
    }
    
    /* Floating Icons */
    .floating-icons {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 1;
    }
    
    .floating-icon {
        position: absolute;
        font-size: 2rem;
        opacity: 0.1;
        color: white;
        animation: float 6s ease-in-out infinite;
    }
    
    .floating-icon:nth-child(1) {
        top: 20%;
        left: 10%;
        animation-delay: 0s;
    }
    
    .floating-icon:nth-child(2) {
        top: 60%;
        right: 15%;
        animation-delay: 2s;
    }
    
    .floating-icon:nth-child(3) {
        bottom: 20%;
        left: 20%;
        animation-delay: 4s;
    }
    
    @@keyframes float {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        33% { transform: translateY(-20px) rotate(120deg); }
        66% { transform: translateY(10px) rotate(240deg); }
    }
    
    /* Responsive Design */
    @@media (max-width: 768px) {
        .public-error-container {
            padding: 100px 20px 20px 20px; /* Increased top padding for mobile navbar */
        }
        
        .public-error-message h1 {
            font-size: 2rem;
        }
        
        .movie-reel {
            width: 120px;
            height: 120px;
        }
        
        .reel-circle {
            width: 120px;
            height: 120px;
        }
        
        .public-error-actions {
            flex-direction: column;
            align-items: center;
        }
        
        .btn-public-primary,
        .btn-public-outline {
            width: 200px;
            justify-content: center;
        }
        
        .section-links {
            flex-direction: column;
            align-items: center;
        }
        
        .section-card {
            width: 200px;
        }
    }
</style>
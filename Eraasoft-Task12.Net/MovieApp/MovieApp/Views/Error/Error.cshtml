@{
    ViewData["Title"] = "Error";
}

<div class="error-container">
    <div class="error-content">
        <div class="error-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        
        <div class="error-message">
            <h1>Oops! Something Went Wrong</h1>
            <p class="error-description">
                We're experiencing some technical difficulties. Our team has been notified and is working to fix the issue.
            </p>
            <p class="error-subtitle">
                Please try again in a few moments, or return to the home page.
            </p>
        </div>
        
        <div class="error-actions">
            <a href="@Url.Action("Index", "Home", new { area = "Public" })" class="btn btn-primary-custom">
                <i class="fas fa-home me-2"></i>Back to Home
            </a>
            <button onclick="location.reload()" class="btn btn-outline-primary-custom">
                <i class="fas fa-redo me-2"></i>Try Again
            </button>
        </div>
    </div>
</div>

<style>
    .error-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #0d1117 0%, #161b22 50%, #21262d 100%);
        color: var(--text-light);
        padding: 80px 20px 20px 20px; /* Added top padding for navbar */
    }
    
    .error-content {
        text-align: center;
        max-width: 600px;
    }
    
    .error-icon .fas {
        font-size: 6rem;
        color: #ffc107;
        animation: pulse 2s ease-in-out infinite;
    }
    
    .error-message h1 {
        font-size: 2.5rem;
        margin: 30px 0 15px;
        color: var(--text-light);
    }
    
    .error-description {
        font-size: 1.2rem;
        color: var(--text-secondary);
        margin-bottom: 10px;
    }
    
    .error-subtitle {
        color: var(--text-muted);
        margin-bottom: 30px;
        line-height: 1.6;
    }
    
    .error-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }
    
    .btn-primary-custom {
        background: var(--primary-color);
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: var(--border-radius);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
    }
    
    .btn-primary-custom:hover {
        background: var(--primary-dark);
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(10, 132, 255, 0.3);
        color: white;
        text-decoration: none;
    }
    
    .btn-outline-primary-custom {
        background: transparent;
        color: var(--primary-color);
        border: 2px solid var(--primary-color);
        padding: 10px 25px;
        border-radius: var(--border-radius);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
    }
    
    .btn-outline-primary-custom:hover {
        background: var(--primary-color);
        color: white;
        transform: translateY(-2px);
        text-decoration: none;
    }
    
    @@keyframes pulse {
        0%, 100% { opacity: 1; transform: scale(1); }
        50% { opacity: 0.8; transform: scale(1.05); }
    }
    
    @@media (max-width: 768px) {
        .error-container {
            padding: 100px 20px 20px 20px; /* Increased top padding for mobile navbar */
        }
        
        .error-message h1 {
            font-size: 2rem;
        }
        
        .error-icon .fas {
            font-size: 4rem;
        }
        
        .error-actions {
            flex-direction: column;
            align-items: center;
        }
        
        .btn-primary-custom,
        .btn-outline-primary-custom {
            width: 200px;
            justify-content: center;
        }
    }
</style>